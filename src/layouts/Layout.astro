---
import { ViewTransitions } from 'astro:transitions'
import '../css/base.css'
import '../css/transitions.css'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Shreya Singh. I capture faces, emotions, bodies, places & feelings!" />
    <meta property="og:image" content="https://snapscript.netlify.app/img/22.webp">
    <meta property="og:image:width" content="1200"> <!-- Optional: Set the width of the image in pixels -->
    <meta property="og:image:height" content="630"> <!-- Optional: Set the height of the image in pixels -->
    <meta property="og:url" content="hhttps://www.instagram.com/snapscript_/">
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
    <script src="../scripts/transitions.ts"></script>
  </head>
  <body>
    <slot />
  </body>
</html>
